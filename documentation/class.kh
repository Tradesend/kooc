@namespace (game) {

  @class weapon() {
    char *_type @property(set: public);
    @constructor()      @callable();
    @destructor()       @callable(virtual);

    void        use()   @callable(virtual);
  };

  @class sword(game@weapon) {
    @constructor()      @callable();
    @destructor()       @callable(override);

    void        use()   @callable(override);
  };
}
